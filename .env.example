# 数据库配置
DATABASE_URL=./database.sqlite

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-please-change-this-in-production-environment
JWT_ACCESS_EXPIRES_IN=15m          # Access Token 过期时间
JWT_REFRESH_EXPIRES_IN=7d           # Refresh Token 过期时间

# 服务器配置
PORT=3000
NODE_ENV=development

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_KEY_PREFIX=bun-hono:

# 日志配置
LOG_LEVEL=debug                     # 日志级别: trace, debug, info, warn, error
LOG_FILE_PATH=./logs                # 日志文件路径
LOG_FILE_ENABLED=true               # 是否启用文件日志输出
LOG_FILE_MAX_SIZE=10                # 单个日志文件最大大小(MB)
LOG_FILE_MAX_FILES=7                # 保留的日志文件数量
LOG_ERROR_FILE=true                 # 是否单独记录错误日志文件

# 安全配置
RATE_LIMIT_WINDOW_MS=900000         # 限流窗口时间（15分钟）
RATE_LIMIT_MAX_REQUESTS=100         # 窗口期内最大请求数
BCRYPT_ROUNDS=12                    # bcrypt 加密轮数
# MAX_REQUEST_SIZE=10485760          # 最大请求体大小（10MB）

# 应用配置
APP_NAME="Bun Hono Server"
APP_VERSION=1.0.0
# APP_URL=https://your-domain.com

# 监控配置
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false

# 文件上传配置
UPLOAD_MAX_SIZE=10485760            # 最大文件大小(10MB)
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain
UPLOAD_STORAGE_TYPE=local           # 存储类型: local, cos, s3, oss
UPLOAD_PATH_PREFIX=uploads          # 上传路径前缀

# 腾讯云COS配置（当UPLOAD_STORAGE_TYPE=cos时使用）
# COS_APP_ID=your-app-id
# COS_SECRET_ID=your-secret-id
# COS_SECRET_KEY=your-secret-key
# COS_BUCKET=your-bucket-name
# COS_REGION=ap-beijing
# COS_DOMAIN=your-custom-domain.com
# COS_PREFIX=uploads
# COS_HTTPS=true

# AWS S3配置（当UPLOAD_STORAGE_TYPE=s3时使用）
# S3_ACCESS_KEY_ID=your-access-key
# S3_SECRET_ACCESS_KEY=your-secret-key
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_FORCE_PATH_STYLE=false                    # 对于 MinIO / 兼容服务若需要 path-style 可设为 true
# S3_PRESIGN_DEFAULT_EXPIRE=3600               # 预签名URL默认有效期(秒)
# S3_PRESIGN_MAX_EXPIRE=86400                  # 预签名URL最大允许有效期(秒)

# Bitiful (S3 兼容) 配置（同样使用 storageType=s3，通过自定义 endpoint 与可选自定义变量）
# 如果不想重复填写，可直接复用上面的 S3_* 变量；也可以单独使用 BITIFUL_* 变量（优先级：S3_* > BITIFUL_*）。
# BITIFUL_ACCESS_KEY_ID=your-bitiful-access-key
# BITIFUL_SECRET_ACCESS_KEY=your-bitiful-secret-key
# BITIFUL_BUCKET=your-bitiful-bucket
# BITIFUL_REGION=us-east-1                     # Bitiful 标准 S3 兼容区域（若不同请修改）
# BITIFUL_ENDPOINT=https://s3.bitiful.com      # Bitiful S3 兼容 Endpoint
# BITIFUL_FORCE_PATH_STYLE=false               # 是否使用 path-style 访问
# BITIFUL_PRESIGN_DEFAULT_EXPIRE=3600          # Bitiful 预签名默认有效期(秒)
# BITIFUL_PRESIGN_MAX_EXPIRE=86400             # Bitiful 预签名最大有效期(秒)
# 说明：Bitiful 仍然使用 UPLOAD_STORAGE_TYPE=s3，代码里会自动读取 BITIFUL_* 作为后备。

# 阿里云OSS配置（当UPLOAD_STORAGE_TYPE=oss时使用）
# OSS_ACCESS_KEY_ID=your-access-key-id
# OSS_ACCESS_KEY_SECRET=your-access-key-secret
# OSS_BUCKET=your-bucket-name
# OSS_REGION=oss-cn-hangzhou
# OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com